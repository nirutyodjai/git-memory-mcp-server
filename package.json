{
  "name": "git-memory-mcp-server",
  "version": "2.0.0",
  "description": "High-Performance MCP Server for Git Memory with WebSocket, Tracing, and Webhooks",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "dev:ts": "ts-node --esm src/server.ts.js",
    "cluster": "node src/cluster.js",
    "test": "node test/performance-test.js",
    "test:load": "node test/load-test.js",
    "test:stress": "node test/load-test.js --scenario stress",
    "test:performance": "node test/performance-test.js --connections 3000 --duration 300",
    "test:endpoints": "node test/test-git-endpoints.js",
    "test:webhooks": "node test/test-webhooks.js",
    "test:websocket": "node test/test-websocket.js",
    "lint": "eslint src/ test/ examples/ --ext .js,.ts",
    "lint:fix": "eslint src/ test/ examples/ --ext .js,.ts --fix",
    "format": "prettier --write src/ test/ examples/",
    "format:check": "prettier --check src/ test/ examples/",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "docker:build": "docker build -t git-memory-mcp-server .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t git-memory-mcp-server:dev .",
    "docker:run": "docker-compose up -d",
    "docker:run:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "profile": "node --prof src/server.js",
    "profile:cpu": "node --cpu-prof src/server.js",
    "profile:heap": "node --heap-prof src/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "health": "curl -f http://localhost:3000/health",
    "metrics": "curl -f http://localhost:3000/metrics",
    "webhooks:test": "curl -X POST http://localhost:3000/webhooks/git -H 'Content-Type: application/json' -d '{\"test\": \"webhook\"}'"
  },
  "keywords": [
    "mcp",
    "git",
    "memory",
    "analysis",
    "high-performance",
    "concurrent-connections",
    "cluster",
    "load-balancing",
    "monitoring"
  ],
  "author": "Git Memory Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "simple-git": "^3.20.0",
    "redis": "^4.6.8",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "pm2": "^5.3.0",
    "dotenv": "^16.3.1",
    "@opentelemetry/sdk-trace-node": "^1.17.0",
    "@opentelemetry/exporter-jaeger": "^1.17.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/api": "^1.6.0",
    "prometheus-api-metrics": "^3.2.2",
    "prom-client": "^15.0.0",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "boxen": "^5.1.2",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/cors": "^2.8.17",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/git-memory-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/git-memory-mcp-server/issues"
  },
  "homepage": "https://github.com/your-org/git-memory-mcp-server#readme"
}
