{
  "name": "git-memory-mcp-server",
  "version": "1.2.0",
  "description": "MCP Server for Git repository management with memory and AI capabilities",
  "main": "dist/index.js",
  "bin": {
    "git-memory-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "docs/README.md",
    "package.json",
    "config/**/*",
    "examples/**/*"
  ],
  "scripts": {
    "build": "tsc -p config/tsconfig.json",
    "dev": "tsc -p config/tsconfig.json --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "jest -c config/jest.config.cjs",
    "test:watch": "jest -c config/jest.config.cjs --watch",
    "test:coverage": "jest -c config/jest.config.cjs --coverage",
    "test:ci": "jest -c config/jest.config.cjs --ci --coverage --watchAll=false",
    "start:mcp-proxy": "node mcp-proxy/mcp-proxy-server-500.js",
    "test:mcp-proxy": "node mcp-proxy/test-mcp-proxy-500.js",
    "coordinator": "node mcp-coordinator.js",
    "proxy": "node mcp-proxy-server.js",
    "dashboard": "node mcp-proxy-server.js",
    "coordinator:http": "node mcp-coordinator.js --http",
    "deploy:batch": "node scripts/deploy-batch.js",
    "health:check": "node scripts/health-check.js",
    "scale:system": "node scripts/scale-system.js"
  },
  "keywords": [
    "mcp",
    "git",
    "memory",
    "ai",
    "repository",
    "management"
  ],
  "author": "nirutyodjai",
  "license": "MIT",
  "homepage": "https://github.com/nirutyodjai/git-memory-mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nirutyodjai/git-memory-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/nirutyodjai/git-memory-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "simple-git": "^3.27.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.7.2"
  }
}