{
  "name": "mcp-proxy-server-500",
  "version": "1.0.0",
  "description": "MCP Proxy Server that supports up to 500 external MCP servers with advanced load balancing and monitoring",
  "main": "mcp-proxy-server-500.js",
  "scripts": {
    "start": "node mcp-proxy-server-500.js",
    "test": "node test-mcp-proxy-500.js",
    "dev": "nodemon mcp-proxy-server-500.js",
    "health-check": "node -e \"require('./mcp-proxy-server-500.js').healthCheck()\"",
    "install-deps": "npm install ws axios express cors helmet compression morgan winston node-cron cluster os crypto"
  },
  "keywords": [
    "mcp",
    "proxy",
    "server",
    "microservices",
    "load-balancer",
    "monitoring",
    "scalability",
    "external-connections"
  ],
  "author": "MCP Proxy Team",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "cluster": "^0.7.7",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mcp-proxy-server-500.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/mcp-proxy-server-500/issues"
  },
  "homepage": "https://github.com/your-org/mcp-proxy-server-500#readme",
  "config": {
    "port": 8080,
    "maxConnections": 500,
    "healthCheckInterval": 30000,
    "logLevel": "info"
  },
  "mcp": {
    "version": "2024-11-05",
    "capabilities": {
      "tools": {
        "listChanged": true
      },
      "resources": {
        "subscribe": true,
        "listChanged": true
      },
      "prompts": {
        "listChanged": true
      },
      "logging": {}
    },
    "serverInfo": {
      "name": "MCP Proxy Server 500",
      "version": "1.0.0",
      "description": "Advanced MCP Proxy Server supporting up to 500 external MCP servers",
      "author": "MCP Proxy Team",
      "homepage": "https://github.com/your-org/mcp-proxy-server-500",
      "repository": "https://github.com/your-org/mcp-proxy-server-500.git"
    },
    "features": [
      "external-server-discovery",
      "dynamic-connection-management",
      "load-balancing",
      "health-monitoring",
      "auto-reconnection",
      "failover-support",
      "performance-metrics",
      "scalability-up-to-500-servers",
      "real-time-monitoring",
      "security-compliance"
    ]
  },
  "performance": {
    "maxMemoryUsage": "2GB",
    "maxCpuUsage": "80%",
    "targetResponseTime": "<100ms",
    "maxConcurrentConnections": 500,
    "connectionPoolSize": 100,
    "requestTimeout": 30000,
    "keepAliveTimeout": 60000
  },
  "monitoring": {
    "healthCheckEndpoint": "/health",
    "metricsEndpoint": "/metrics",
    "statusEndpoint": "/status",
    "logsEndpoint": "/logs",
    "dashboardEndpoint": "/dashboard"
  },
  "security": {
    "enableHttps": false,
    "enableCors": true,
    "enableHelmet": true,
    "enableRateLimiting": true,
    "maxRequestsPerMinute": 1000,
    "enableAuthentication": false,
    "enableAuthorization": false
  },
  "clustering": {
    "enabled": false,
    "workers": "auto",
    "maxWorkers": 8,
    "restartDelay": 5000
  },
  "logging": {
    "level": "info",
    "format": "json",
    "enableConsole": true,
    "enableFile": true,
    "logFile": "logs/mcp-proxy-500.log",
    "maxFileSize": "10MB",
    "maxFiles": 5,
    "enableRotation": true
  }
}