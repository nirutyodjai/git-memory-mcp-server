# =============================================================================
# NEXUS IDE - AI Central Server Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=4200
NODE_ENV=development
HOST=localhost
SERVER_NAME=nexus-ai-central
SERVER_VERSION=1.0.0

# -----------------------------------------------------------------------------
# AI Model API Keys and Configuration
# -----------------------------------------------------------------------------

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL_GPT4=gpt-4-turbo-preview
OPENAI_MODEL_GPT35=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4096
GOOGLE_TEMPERATURE=0.7

# Local Llama Configuration (Ollama)
LLAMA_API_URL=http://localhost:11434
LLAMA_MODEL=llama2:13b
LLAMA_TIMEOUT=30000

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=microsoft/DialoGPT-large

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/nexus-ai
MONGO_DB_NAME=nexus-ai
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_MAX_IDLE_TIME=30000
MONGO_SERVER_SELECTION_TIMEOUT=5000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# PostgreSQL Configuration (Optional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nexus_ai
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_MAX_CONNECTIONS=20

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=nexus-ide
JWT_AUDIENCE=nexus-users

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm
HASH_SALT_ROUNDS=12

# API Security
API_KEY_HEADER=x-api-key
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000
API_CORS_ORIGIN=http://localhost:3000,https://nexus-ide.com

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

LOG_LEVEL=info
LOG_FILE=logs/ai-central.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_FORMAT=json
LOG_COLORIZE=true

# Error Tracking (Sentry)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------

# Request Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
REQUEST_SIZE_LIMIT=10mb
REQUEST_PARAMETER_LIMIT=1000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_CHECK_PERIOD=600
MEMORY_CACHE_MAX=500
MEMORY_CACHE_TTL=300

# Connection Pool Configuration
HTTP_KEEP_ALIVE=true
HTTP_KEEP_ALIVE_TIMEOUT=5000
HTTP_MAX_SOCKETS=50
HTTP_MAX_FREE_SOCKETS=10

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Core Features
ENABLE_CODE_COMPLETION=true
ENABLE_CODE_GENERATION=true
ENABLE_CODE_EXPLANATION=true
ENABLE_CODE_REVIEW=true
ENABLE_CONVERSATION=true
ENABLE_DEBUGGING=true
ENABLE_OPTIMIZATION=true

# Advanced Features
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_VOICE_COMMANDS=false
ENABLE_VISUAL_PROGRAMMING=false
ENABLE_AUTO_TESTING=true
ENABLE_PERFORMANCE_MONITORING=true

# AI Model Features
ENABLE_MULTI_MODEL_ROUTING=true
ENABLE_MODEL_FALLBACK=true
ENABLE_RESPONSE_CACHING=true
ENABLE_CONTEXT_LEARNING=true
ENABLE_PERSONALIZATION=true

# Security Features
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_VALIDATION=true
ENABLE_RESPONSE_SANITIZATION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_INTRUSION_DETECTION=false

# -----------------------------------------------------------------------------
# Monitoring and Analytics
# -----------------------------------------------------------------------------

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_INTERVAL=10000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60000
ANALYTICS_RETENTION_DAYS=90

# Alerting Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=your_email@gmail.com
ALERT_EMAIL_PASS=your_email_password
ALERT_EMAIL_FROM=nexus-ai@yourcompany.com
ALERT_EMAIL_TO=admin@yourcompany.com

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#nexus-alerts
SLACK_USERNAME=NEXUS-AI-Bot

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# GitLab Integration
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret_here

# Bitbucket Integration
BITBUCKET_USERNAME=your_bitbucket_username
BITBUCKET_APP_PASSWORD=your_bitbucket_app_password

# Docker Registry
DOCKER_REGISTRY_URL=registry.hub.docker.com
DOCKER_REGISTRY_USERNAME=your_docker_username
DOCKER_REGISTRY_PASSWORD=your_docker_password

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nexus-ai-storage

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
GOOGLE_CLOUD_STORAGE_BUCKET=nexus-ai-gcs-bucket

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------

# Development Tools
DEV_MODE=true
HOT_RELOAD=true
DEBUG_MODE=true
VERBOSE_LOGGING=true
SOURCE_MAPS=true

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/nexus-ai-test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_COVERAGE_THRESHOLD=80

# Mock Services
MOCK_AI_SERVICES=false
MOCK_DATABASE=false
MOCK_EXTERNAL_APIS=false

# -----------------------------------------------------------------------------
# Production Configuration
# -----------------------------------------------------------------------------

# Clustering
CLUSTER_MODE=false
CLUSTER_WORKERS=auto
CLUSTER_RESTART_DELAY=1000
CLUSTER_MAX_RESTARTS=10

# Load Balancing
LOAD_BALANCER_STRATEGY=round-robin
LOAD_BALANCER_HEALTH_CHECK=true
LOAD_BALANCER_RETRY_ATTEMPTS=3
LOAD_BALANCER_RETRY_DELAY=1000

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=path/to/certificate.crt
SSL_KEY_PATH=path/to/private-key.key
SSL_CA_PATH=path/to/ca-certificate.crt
SSL_PASSPHRASE=your_ssl_passphrase

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups
BACKUP_COMPRESSION=gzip

# -----------------------------------------------------------------------------
# Custom Configuration
# -----------------------------------------------------------------------------

# Company/Organization Settings
ORGANIZATION_NAME=Your Company Name
ORGANIZATION_DOMAIN=yourcompany.com
ORGANIZATION_LOGO_URL=https://yourcompany.com/logo.png
ORGANIZATION_SUPPORT_EMAIL=support@yourcompany.com

# Branding
APP_NAME=NEXUS IDE
APP_DESCRIPTION=Ultimate AI-Powered Development Environment
APP_VERSION=1.0.0
APP_AUTHOR=NEXUS IDE Team
APP_HOMEPAGE=https://nexus-ide.com

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,th,ja,ko,zh,es,fr,de,it,pt,ru
TIMEZONE=UTC
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss

# -----------------------------------------------------------------------------
# Advanced AI Configuration
# -----------------------------------------------------------------------------

# Model Selection Strategy
AI_MODEL_SELECTION_STRATEGY=performance
AI_MODEL_FALLBACK_ENABLED=true
AI_MODEL_HEALTH_CHECK_INTERVAL=60000
AI_MODEL_TIMEOUT=30000
AI_MODEL_RETRY_ATTEMPTS=3

# Context Management
CONTEXT_WINDOW_SIZE=8192
CONTEXT_OVERLAP_SIZE=512
CONTEXT_COMPRESSION_ENABLED=true
CONTEXT_CACHE_SIZE=1000
CONTEXT_TTL=3600

# Response Processing
RESPONSE_STREAMING_ENABLED=true
RESPONSE_CHUNK_SIZE=1024
RESPONSE_BUFFER_SIZE=8192
RESPONSE_COMPRESSION_ENABLED=true
RESPONSE_VALIDATION_ENABLED=true

# Learning and Adaptation
USER_LEARNING_ENABLED=true
PROJECT_LEARNING_ENABLED=true
TEAM_LEARNING_ENABLED=true
LEARNING_DATA_RETENTION_DAYS=365
LEARNING_MODEL_UPDATE_INTERVAL=86400

# -----------------------------------------------------------------------------
# End of Configuration
# -----------------------------------------------------------------------------

# Note: Make sure to:
# 1. Copy this file to .env
# 2. Replace all placeholder values with actual values
# 3. Keep your .env file secure and never commit it to version control
# 4. Use environment-specific values for different deployments
# 5. Regularly rotate sensitive keys and tokens