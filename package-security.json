{
  "name": "git-memory-mcp-enterprise-security",
  "version": "1.0.0",
  "description": "Enterprise-grade Security System for Git Memory MCP Server with multi-tenant architecture, JWT authentication, RBAC, and comprehensive security features",
  "main": "src/security/securityIntegration.js",
  "scripts": {
    "start": "node src/security/securityIntegration.js",
    "start:dev": "nodemon src/security/securityIntegration.js",
    "start:prod": "NODE_ENV=production node src/security/securityIntegration.js",
    "test": "jest src/tests/securityTests.js",
    "test:watch": "jest --watch src/tests/securityTests.js",
    "test:coverage": "jest --coverage src/tests/securityTests.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "node src/tests/securityTests.js --scan",
    "security:penetration": "node src/tests/securityTests.js --penetration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "docs": "jsdoc src/**/*.js -d docs",
    "build": "npm run lint && npm run test && npm run security:audit",
    "deploy": "npm run build && npm run start:prod",
    "docker:build": "docker build -t git-memory-security .",
    "docker:run": "docker run -p 3333:3333 git-memory-security",
    "monitor": "node src/services/monitoringService.js",
    "audit": "node src/services/auditService.js",
    "config": "node src/services/securityConfigManager.js",
    "dashboard": "node src/routes/securityDashboard.js"
  },
  "keywords": [
    "security",
    "enterprise",
    "authentication",
    "authorization",
    "jwt",
    "rbac",
    "multi-tenant",
    "audit",
    "monitoring",
    "mcp",
    "git-memory",
    "compliance",
    "threat-detection",
    "api-security",
    "middleware",
    "encryption",
    "rate-limiting",
    "session-management",
    "penetration-testing",
    "vulnerability-assessment"
  ],
  "author": "Enterprise Security Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/git-memory-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/git-memory-mcp-server/issues"
  },
  "homepage": "https://github.com/your-org/git-memory-mcp-server#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.10",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "pdf-parse": "^1.1.1",
    "csv-parser": "^3.0.0",
    "xml2js": "^0.6.2",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0",
    "qs": "^6.11.2",
    "cookie-parser": "^1.4.6",
    "express-useragent": "^1.0.15",
    "geoip-lite": "^1.4.10",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-github2": "^0.1.12",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-slow-down": "^2.0.1",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0",
    "xss": "^1.0.14",
    "dompurify": "^3.0.6",
    "jsdom": "^23.0.1",
    "validator": "^13.11.0",
    "sanitize-html": "^2.11.0",
    "csrf": "^3.1.0",
    "csurf": "^1.11.0",
    "express-enforces-ssl": "^1.1.0",
    "hsts": "^2.2.0",
    "nocache": "^4.0.0",
    "referrer-policy": "^1.2.0",
    "x-xss-protection": "^3.0.0",
    "dont-sniff-mimetype": "^1.1.0",
    "hide-powered-by": "^1.1.0",
    "ienoopen": "^1.1.0",
    "frameguard": "^4.0.0",
    "content-security-policy": "^0.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "jsdoc": "^4.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "semantic-release": "^22.0.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "nyc": "^15.1.0",
    "codecov": "^3.8.3",
    "sinon": "^17.0.1",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "artillery": "^2.0.3",
    "newman": "^6.0.0",
    "postman-collection": "^4.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "redoc-express": "^2.1.0",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/passport-jwt": "^3.0.13",
    "docker": "^1.0.0",
    "docker-compose": "^0.24.6",
    "kubernetes": "^0.1.0",
    "helm": "^0.1.0",
    "terraform": "^0.1.0",
    "ansible": "^0.1.0"
  },
  "peerDependencies": {
    "redis": "^4.6.10",
    "mongodb": "^6.3.0",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6"
  },
  "optionalDependencies": {
    "sharp": "^0.33.1",
    "canvas": "^2.11.2",
    "puppeteer": "^21.6.1",
    "playwright": "^1.40.1",
    "selenium-webdriver": "^4.16.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitizen --hook || true",
      "pre-push": "npm run test && npm run security:audit"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.js"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/tests/**",
      "src/**/*.test.js",
      "src/**/*.spec.js"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 80,
    "statements": 80
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended"
    ],
    "plugins": [
      "security"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "security/detect-object-injection": "error",
      "security/detect-non-literal-regexp": "error",
      "security/detect-unsafe-regex": "error",
      "security/detect-buffer-noassert": "error",
      "security/detect-child-process": "error",
      "security/detect-disable-mustache-escape": "error",
      "security/detect-eval-with-expression": "error",
      "security/detect-no-csrf-before-method-override": "error",
      "security/detect-non-literal-fs-filename": "error",
      "security/detect-non-literal-require": "error",
      "security/detect-possible-timing-attacks": "error",
      "security/detect-pseudoRandomBytes": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "browserslist": [
    "node >= 16"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-org"
  },
  "security": {
    "advisories": {
      "moderate": "error",
      "high": "error",
      "critical": "error"
    },
    "dev-advisories": {
      "moderate": "warn",
      "high": "error",
      "critical": "error"
    }
  },
  "docker": {
    "image": "node:18-alpine",
    "workdir": "/app",
    "expose": [3333],
    "healthcheck": {
      "test": ["CMD", "curl", "-f", "http://localhost:3333/health"],
      "interval": "30s",
      "timeout": "10s",
      "retries": 3,
      "start_period": "40s"
    }
  },
  "kubernetes": {
    "namespace": "security",
    "deployment": "git-memory-security",
    "service": "security-service",
    "ingress": "security-ingress",
    "configmap": "security-config",
    "secret": "security-secrets"
  }
}