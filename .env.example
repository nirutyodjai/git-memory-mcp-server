# ðŸš€ NEXUS IDE - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Settings
# ============================================================================
NODE_ENV=production
PORT=3000
WS_PORT=3001
LOG_LEVEL=info
DEBUG=nexus:*

# ============================================================================
# Security Settings
# ============================================================================
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_key_here
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# ============================================================================
# AI Provider API Keys
# ============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google AI Configuration
GOOGLE_API_KEY=your_google_ai_api_key_here
GOOGLE_MODEL=gemini-pro

# Cohere Configuration
COHERE_API_KEY=your_cohere_api_key_here

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL
POSTGRES_URL=postgresql://nexus:nexus_password@localhost:5432/nexus_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nexus_db
POSTGRES_USER=nexus
POSTGRES_PASSWORD=nexus_password

# MongoDB
MONGODB_URL=mongodb://nexus:nexus_mongo_password@localhost:27017/nexus
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=nexus
MONGO_USER=nexus
MONGO_PASSWORD=nexus_mongo_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=nexus

# ============================================================================
# File Storage Configuration
# ============================================================================
NEXUS_DATA_DIR=./data
NEXUS_LOG_DIR=./logs
NEXUS_TEMP_DIR=./temp
NEXUS_UPLOAD_DIR=./uploads
NEXUS_BACKUP_DIR=./backups

# File Upload Limits
MAX_FILE_SIZE=100MB
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=.js,.ts,.jsx,.tsx,.py,.java,.cpp,.c,.h,.css,.html,.json,.xml,.md,.txt

# ============================================================================
# Git Integration
# ============================================================================
GIT_DEFAULT_BRANCH=main
GIT_AUTO_COMMIT=true
GIT_AUTO_PUSH=false
GIT_COMMIT_MESSAGE_PREFIX=[NEXUS-IDE]

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# GitLab Integration
GITLAB_TOKEN=your_gitlab_access_token_here
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret_here

# ============================================================================
# WebSocket Configuration
# ============================================================================
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_TIMEOUT=60000

# ============================================================================
# Performance & Caching
# ============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Memory Settings
NODE_OPTIONS=--max-old-space-size=4096
GC_INTERVAL=300000

# ============================================================================
# Monitoring & Analytics
# ============================================================================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana
GRAFANA_PASSWORD=your_grafana_admin_password_here
GRAFANA_PORT=3001

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_GIT_INTEGRATION=true
ENABLE_PLUGIN_SYSTEM=true
ENABLE_ANALYTICS=true
ENABLE_TELEMETRY=false