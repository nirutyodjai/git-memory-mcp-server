# Git Memory MCP Server - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# API KEYS AND TOKENS
# =============================================================================

# Figma Integration
# Get your token from: https://www.figma.com/developers/api#access-tokens
FIGMA_API_KEY=your_figma_api_token_here

# Authentication Configuration
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password
JWT_SECRET=your_jwt_secret_key_here

# Security Configuration
CSRF_SECRET=your_csrf_secret_key_here

# Browserbase Configuration (if using browserbase servers)
BROWSERBASE_API_KEY=your_browserbase_api_key
BROWSERBASE_PROJECT_ID=your_browserbase_project_id
GEMINI_API_KEY=your_gemini_api_key

# GitHub Integration
# Generate at: https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# Node.js Environment
NODE_ENV=production

# Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# Memory Configuration
NODE_OPTIONS=--max-old-space-size=512

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Slack Integration (if used)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_TEAM_ID=your-slack-team-id

# GitLab Integration (if used)
GITLAB_API_URL=https://gitlab.com/api/v4
GITLAB_PERSONAL_ACCESS_TOKEN=your-gitlab-token

# Google Maps (if used)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# AWS (if used)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable/disable security features
ENABLE_RATE_LIMIT=true
ENABLE_CORS=true
ENABLE_CSRF=false

# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=warn

# Enable request/error logging
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_LOGGING=true

# Health check settings
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=120000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings (only for NODE_ENV=development)
DEV_PORT=3001
DEV_HOST=0.0.0.0
DEV_ENABLE_DEBUG=true

# =============================================================================
# BLENDER INTEGRATION
# =============================================================================

# Path to Blender executable
BLENDER_PATH=C:\Program Files\Blender Foundation\Blender 4.0\blender.exe

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all 'your_*_here' values with actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use strong, unique tokens for each service
# 4. Regularly rotate your API keys and tokens
# 5. Monitor usage and revoke unused tokens

# For more information:
# - Figma API: https://www.figma.com/developers/api
# - GitHub Tokens: https://docs.github.com/en/authentication/keeping-your-account-and-data-secure/creating-a-personal-access-token
# - Security Best Practices: https://owasp.org/www-project-api-security/