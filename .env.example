# Server Configuration
PORT=3000
NODE_ENV=development
WORKERS=auto

# Connection Limits
MAX_CONNECTIONS=3000
MAX_CONNECTIONS_PER_IP=10
CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_BURST=20

# Git Configuration
GIT_TIMEOUT=10000
GIT_MAX_CONCURRENT=50
# Allowlist for Git CLI operations (semicolon separated absolute paths). Leave empty to disable enforcement.
GIT_MEMORY_ALLOWED_REPOS=

# Shared secret for calling /git/* endpoints and CLI MCP tools
GIT_MEMORY_API_KEY=

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_TIMEOUT=3600000
ENABLE_IP_FILTERING=false
IP_WHITELIST=
IP_BLACKLIST=

# Logging
LOG_LEVEL=info
LOG_FILE=server.log
ENABLE_AUDIT_LOG=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_PAYLOAD=1048576

# Performance
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_KEEP_ALIVE=true
KEEP_ALIVE_TIMEOUT=5000

# Development
ENABLE_CORS=true
CORS_ORIGIN=*
ENABLE_DEBUG=false