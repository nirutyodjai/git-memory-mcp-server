# NEXUS IDE Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application mode (development, production, test)
NODE_ENV=development

# Application port
VITE_PORT=3000

# Application host
VITE_HOST=localhost

# Application base URL
VITE_BASE_URL=http://localhost:3000

# =============================================================================
# MCP SERVER SETTINGS
# =============================================================================

# Git Memory MCP Server URL
VITE_MCP_SERVER_URL=ws://localhost:8080

# MCP Server API Key
VITE_MCP_API_KEY=your_mcp_api_key_here

# MCP Server timeout (milliseconds)
VITE_MCP_TIMEOUT=30000

# MCP Server retry attempts
VITE_MCP_RETRY_ATTEMPTS=3

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI API Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-4-turbo-preview
VITE_OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Claude API Configuration
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini API Configuration
VITE_GOOGLE_API_KEY=your_google_api_key_here
VITE_GOOGLE_MODEL=gemini-pro

# Local AI Model Configuration
VITE_LOCAL_AI_URL=http://localhost:11434
VITE_LOCAL_AI_MODEL=llama2

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (for user data, projects, etc.)
VITE_DATABASE_URL=sqlite://./nexus-ide.db

# Redis URL (for caching and real-time features)
VITE_REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret for authentication
VITE_JWT_SECRET=your_jwt_secret_here

# Session secret
VITE_SESSION_SECRET=your_session_secret_here

# CORS origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# COLLABORATION FEATURES
# =============================================================================

# WebSocket server URL for real-time collaboration
VITE_WS_SERVER_URL=ws://localhost:8081

# WebRTC configuration for peer-to-peer features
VITE_WEBRTC_ICE_SERVERS='[{"urls":"stun:stun.l.google.com:19302"}]'

# =============================================================================
# CLOUD SERVICES INTEGRATION
# =============================================================================

# GitHub Integration
VITE_GITHUB_CLIENT_ID=your_github_client_id_here
VITE_GITHUB_CLIENT_SECRET=your_github_client_secret_here

# GitLab Integration
VITE_GITLAB_CLIENT_ID=your_gitlab_client_id_here
VITE_GITLAB_CLIENT_SECRET=your_gitlab_client_secret_here

# Bitbucket Integration
VITE_BITBUCKET_CLIENT_ID=your_bitbucket_client_id_here
VITE_BITBUCKET_CLIENT_SECRET=your_bitbucket_client_secret_here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry DSN for error tracking
VITE_SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
VITE_GA_ID=your_google_analytics_id_here

# Mixpanel token
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Enable service worker
VITE_ENABLE_SW=true

# Enable PWA features
VITE_ENABLE_PWA=true

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Enable lazy loading
VITE_ENABLE_LAZY_LOADING=true

# Bundle analyzer
VITE_ANALYZE_BUNDLE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable hot module replacement
VITE_HMR=true

# Enable source maps
VITE_SOURCE_MAP=true

# Enable development tools
VITE_DEV_TOOLS=true

# Mock API responses
VITE_MOCK_API=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI features
VITE_ENABLE_AI=true

# Enable collaboration features
VITE_ENABLE_COLLABORATION=true

# Enable advanced debugging
VITE_ENABLE_ADVANCED_DEBUG=true

# Enable plugin system
VITE_ENABLE_PLUGINS=true

# Enable telemetry
VITE_ENABLE_TELEMETRY=false

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Enable experimental AI features
VITE_EXPERIMENTAL_AI=false

# Enable experimental collaboration features
VITE_EXPERIMENTAL_COLLAB=false

# Enable experimental performance optimizations
VITE_EXPERIMENTAL_PERF=false

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# Enable console logging
VITE_ENABLE_CONSOLE_LOG=true

# Enable file logging
VITE_ENABLE_FILE_LOG=false

# Log file path
VITE_LOG_FILE_PATH=./logs/nexus-ide.log

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Default theme
VITE_DEFAULT_THEME=dark

# Default language
VITE_DEFAULT_LANGUAGE=en

# Default editor settings
VITE_DEFAULT_FONT_SIZE=14
VITE_DEFAULT_FONT_FAMILY="JetBrains Mono"
VITE_DEFAULT_TAB_SIZE=2

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy
VITE_CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' ws: wss: https:;"

# =============================================================================
# BACKUP & SYNC
# =============================================================================

# Auto-save interval (milliseconds)
VITE_AUTO_SAVE_INTERVAL=5000

# Auto-backup interval (milliseconds)
VITE_AUTO_BACKUP_INTERVAL=300000

# Cloud sync provider (none, google-drive, dropbox, onedrive)
VITE_CLOUD_SYNC_PROVIDER=none

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Performance monitoring interval (milliseconds)
VITE_PERF_MONITOR_INTERVAL=1000

# Memory usage threshold (MB)
VITE_MEMORY_THRESHOLD=512

# CPU usage threshold (%)
VITE_CPU_THRESHOLD=80