# Git Memory MCP Server Configuration Example
# Copy this file to .env and modify the values as needed

# Git Repository Configuration
# Path to the Git repository to manage
# Default: current directory
GIT_REPO_PATH=/path/to/your/repository

# Memory Database Configuration
# Path to the memory database file
# Default: ./memory.db
MEMORY_DB_PATH=./data/memory.db

# Maximum number of memory entries to store
# Default: 10000
MAX_MEMORY_ENTRIES=15000

# Memory Search Configuration
# Similarity threshold for semantic search (0.0 to 1.0)
# Lower values return more results, higher values are more strict
# Default: 0.3
MEMORY_SIMILARITY_THRESHOLD=0.4

# Auto-save interval in milliseconds
# How often to save memory database to disk
# Default: 30000 (30 seconds)
AUTO_SAVE_INTERVAL=60000

# Logging Configuration
# Log level: error, warn, info, debug
# Default: info
LOG_LEVEL=info

# Enable/disable verbose logging
# Default: false
VERBOSE_LOGGING=false

# Performance Configuration
# Maximum number of commits to analyze for patterns
# Default: 1000
MAX_COMMITS_ANALYSIS=2000

# Maximum number of files to track in memory
# Default: 5000
MAX_FILES_TRACKING=10000

# Cache Configuration
# Enable/disable caching for better performance
# Default: true
ENABLE_CACHING=true

# Cache TTL in milliseconds
# Default: 300000 (5 minutes)
CACHE_TTL=600000

# Advanced Configuration
# Enable experimental features
# Default: false
ENABLE_EXPERIMENTAL_FEATURES=false

# Custom memory indexing strategy
# Options: tfidf, word2vec, hybrid
# Default: tfidf
MEMORY_INDEXING_STRATEGY=tfidf

# Git operations timeout in milliseconds
# Default: 30000 (30 seconds)
GIT_OPERATION_TIMEOUT=45000