# =============================================================================
# ENTERPRISE SECURITY DASHBOARD - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost
SERVER_NAME=security-dashboard
SERVER_VERSION=1.0.0

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# PostgreSQL (Primary Database)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=security_dashboard
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_TIMEOUT=30000

# Database URLs (Alternative configuration)
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/security_dashboard
DATABASE_REPLICA_URL=postgresql://postgres:your_secure_password@localhost:5433/security_dashboard_replica

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER=false
REDIS_SENTINEL=false
REDIS_URL=redis://localhost:6379

# Redis Cluster Configuration (if using cluster)
REDIS_CLUSTER_NODES=localhost:7000,localhost:7001,localhost:7002

# -----------------------------------------------------------------------------
# MONGODB CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=security_logs
MONGO_USER=
MONGO_PASSWORD=
MONGO_URL=mongodb://localhost:27017/security_logs

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_change_this_in_production
SESSION_NAME=security_dashboard_session
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm
HASH_ROUNDS=12

# API Keys
API_KEY_SECRET=your_api_key_secret_change_this_in_production
API_KEY_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION
# -----------------------------------------------------------------------------

# Multi-Factor Authentication
MFA_ENABLED=true
MFA_ISSUER=Security Dashboard
MFA_WINDOW=2
MFA_BACKUP_CODES=10

# OAuth Configuration (Optional)
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret

# LDAP Configuration (Optional)
LDAP_ENABLED=false
LDAP_URL=ldap://localhost:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin_password
LDAP_SEARCH_BASE=ou=users,dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})

# -----------------------------------------------------------------------------
# RATE LIMITING CONFIGURATION
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Slow Down Configuration
SLOW_DOWN_WINDOW_MS=900000
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500
SLOW_DOWN_MAX_DELAY_MS=20000

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/security-dashboard.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_JSON_FORMAT=false

# Security Logging
SECURITY_LOG_ENABLED=true
SECURITY_LOG_PATH=./logs/security-events.log
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log

# -----------------------------------------------------------------------------
# MONITORING CONFIGURATION
# -----------------------------------------------------------------------------

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=security-dashboard
APM_ENVIRONMENT=development
APM_SERVER_URL=http://localhost:8200

# -----------------------------------------------------------------------------
# WEBSOCKET CONFIGURATION
# -----------------------------------------------------------------------------
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/ws
WEBSOCKET_CORS_ORIGIN=*
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_HEARTBEAT_TIMEOUT=60000

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES CONFIGURATION
# -----------------------------------------------------------------------------

# Threat Intelligence APIs
THREAT_INTEL_ENABLED=true
THREAT_INTEL_VIRUSTOTAL_API_KEY=your_virustotal_api_key
THREAT_INTEL_SHODAN_API_KEY=your_shodan_api_key
THREAT_INTEL_ALIENVAULT_API_KEY=your_alienvault_api_key

# SIEM Integration
SIEM_ENABLED=false
SIEM_TYPE=splunk
SIEM_ENDPOINT=https://your-siem-endpoint.com
SIEM_API_KEY=your_siem_api_key
SIEM_INDEX=security_dashboard

# Email Configuration
EMAIL_ENABLED=true
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Security Dashboard <noreply@yourdomain.com>

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
FEATURE_REAL_TIME_MONITORING=true
FEATURE_THREAT_INTELLIGENCE=true
FEATURE_COMPLIANCE_DASHBOARD=true
FEATURE_INCIDENT_MANAGEMENT=true
FEATURE_USER_BEHAVIOR_ANALYTICS=true
FEATURE_VULNERABILITY_SCANNING=true
FEATURE_NETWORK_MONITORING=true
FEATURE_COLLABORATION=true
FEATURE_MOBILE_APP=false
FEATURE_API_GATEWAY=true

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION
# -----------------------------------------------------------------------------

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_CHECK_PERIOD=600

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Request Limits
REQUEST_SIZE_LIMIT=10mb
REQUEST_PARAMETER_LIMIT=1000
REQUEST_TIMEOUT=30000

# -----------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# -----------------------------------------------------------------------------
DEBUG_ENABLED=true
DEBUG_NAMESPACE=security-dashboard:*
HOT_RELOAD_ENABLED=true
SOURCE_MAPS_ENABLED=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:test_password@localhost:5432/security_dashboard_test
TEST_REDIS_URL=redis://localhost:6380
TEST_TIMEOUT=30000

# -----------------------------------------------------------------------------
# PRODUCTION CONFIGURATION
# -----------------------------------------------------------------------------

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt
SSL_CA_PATH=./ssl/ca.crt

# Cluster Configuration
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0
CLUSTER_RESTART_DELAY=1000

# Process Management
PM2_ENABLED=false
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster
PM2_MAX_MEMORY_RESTART=1G

# -----------------------------------------------------------------------------
# BACKUP CONFIGURATION
# -----------------------------------------------------------------------------
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# -----------------------------------------------------------------------------
# COMPLIANCE CONFIGURATION
# -----------------------------------------------------------------------------
COMPLIANCE_FRAMEWORKS=SOC2,ISO27001,GDPR,HIPAA,PCI-DSS
COMPLIANCE_REPORTING_ENABLED=true
COMPLIANCE_SCHEDULE=0 0 1 * *
COMPLIANCE_RETENTION_YEARS=7

# -----------------------------------------------------------------------------
# CUSTOM CONFIGURATION
# -----------------------------------------------------------------------------

# Organization Settings
ORGANIZATION_NAME=Your Organization
ORGANIZATION_DOMAIN=yourdomain.com
ORGANIZATION_LOGO_URL=https://yourdomain.com/logo.png
ORGANIZATION_TIMEZONE=UTC
ORGANIZATION_LOCALE=en-US

# Dashboard Customization
DASHBOARD_THEME=dark
DASHBOARD_REFRESH_INTERVAL=30000
DASHBOARD_MAX_WIDGETS=20
DASHBOARD_AUTO_SAVE=true

# User Preferences
DEFAULT_USER_ROLE=viewer
DEFAULT_USER_TIMEZONE=UTC
DEFAULT_USER_LOCALE=en-US
USER_REGISTRATION_ENABLED=false
USER_EMAIL_VERIFICATION=true

# =============================================================================
# IMPORTANT SECURITY NOTES:
# 
# 1. Change ALL default passwords and secrets before deploying to production
# 2. Use strong, randomly generated keys for JWT_SECRET, ENCRYPTION_KEY, etc.
# 3. Enable SSL/TLS in production (SSL_ENABLED=true)
# 4. Use environment-specific configuration files
# 5. Never commit sensitive credentials to version control
# 6. Regularly rotate API keys and secrets
# 7. Use a secrets management service in production
# 8. Enable audit logging for compliance requirements
# 9. Configure proper CORS origins for your domain
# 10. Set up monitoring and alerting for security events
# =============================================================================